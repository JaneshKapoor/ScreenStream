{
  "manifest_version": 3,
  "name": "ScreenStream",
  "version": "1.0",
  "description": "Record your screen and camera",
  "permissions": ["activeTab", "tabCapture", "storage", "desktopCapture", "windows", "system.display"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon1.png",
      "48": "icon2.png",
      "128": "icon3.png"
    }
  },
  "icons": {
    "16": "icon1.png",
    "48": "icon2.png",
    "128": "icon3.png"
  }
}
