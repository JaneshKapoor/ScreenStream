{
    "manifest_version": 3,
    "name": "Screen & Camera Recorder",
    "version": "1.0",
    "permissions": ["activeTab", "tabCapture", "storage"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }  